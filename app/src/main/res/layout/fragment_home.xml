<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:background="@color/blue"
            android:padding="@dimen/_10sdp">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Widget.Seller.Text.Title.White.SemiBold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="PSTL Service" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/ic_qr_code"
                android:tint="@color/white" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_13sdp"
            android:layout_marginTop="-50dp"
            android:layout_marginEnd="@dimen/_13sdp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Widget.Seller.Text.Black.SemiBold"
                    android:text="Share More to Earn More" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Widget.Seller.Text.Small"
                    android:text="Share your own web store's link on Social Media to \nattract more customers daily" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/Widget.Seller.Text.Orange"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="mydukkan.io/pstl" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_round_green"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingTop="@dimen/_4sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_4sdp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_whatsapp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/Widget.Seller.Text.White"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_1sdp"
                            android:gravity="center"
                            android:text="Share" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_13sdp"
            android:layout_marginEnd="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Widget.Seller.Text.Black"
                android:layout_weight="1"
                android:text="Overview" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Widget.Seller.Text.Small"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Life Time" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_10sdp"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/shape_white_round"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Widget.Seller.Text"
                    android:text="ORDERS" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Widget.Seller.Text.Black"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_10sdp"
                android:padding="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/shape_white_round"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Widget.Seller.Text"
                    android:text="TOTAL SALES" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Widget.Seller.Text.Black"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="₹0" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_10sdp"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/shape_white_round"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Widget.Seller.Text"
                    android:text="STORE VIEWS" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Widget.Seller.Text.Black"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_10sdp"
                android:padding="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/shape_white_round"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Widget.Seller.Text"
                    android:text="PRODUCT VIEWS" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Widget.Seller.Text.Black"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="₹0" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_13sdp"
            android:layout_marginEnd="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Widget.Seller.Text.Black"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="Active Orders" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Widget.Seller.Text.Small"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_gravity="center"
                android:text="View All" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_next"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Widget.Seller.Text.Small.White.SemiBold"
                android:layout_width="wrap_content"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:background="@drawable/shape_extra_round_blue"
                android:text="Pending"/>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Widget.Seller.Text.Small.Gray.SemiBold"
                android:layout_width="wrap_content"
                android:paddingStart="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:background="@drawable/shape_extra_round_gray"
                android:text="Accepted"/>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Widget.Seller.Text.Small.Gray.SemiBold"
                android:layout_width="wrap_content"
                android:paddingStart="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:background="@drawable/shape_extra_round_gray"
                android:text="Shipped"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="@dimen/_20sdp"
            android:layout_margin="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white_round"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Widget.Seller.Text.Small.Gray"
                android:gravity="center"
                android:text="You don't have any pending orders."/>
        </LinearLayout>

    </LinearLayout>

</layout>